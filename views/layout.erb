            </div>

            <div class="btn-group" role="group">
              <a href="/bands"><button type="button" id="bands_button" class="btn btn-default">Bands</button></a>
            </div>

            <div class="btn-group" role="group">
              <a href="/venues"><button type="button" id="venues_button" class="btn btn-default">Venues</button></a>
            </div>

          </div>
        </div>
      </div>
      <br>
      <%= yield %>
    </div>
  </body>
